<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:src="@drawable/img_ring" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:fontFamily="@font/nunito_bold"
            tools:text="06:30"
            android:textColor="@color/txt_green"
            android:textSize="@dimen/_30ssp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:textColor="@color/txt_dark"
            android:textSize="@dimen/_18ssp"
            tools:text="It’s time “Title”!"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit ="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/nunito_medium"
            android:gravity="center"
            android:textColor="@color/txt_dark"
            android:textSize="@dimen/_12ssp"
            android:maxLines="2"
            tools:text="Description something afbds kvnkxc nvlkxvlk sdlfsl dff" />

        <TextView
            android:id="@+id/btnSnooze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/bg_btn_snooze"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:paddingVertical="@dimen/_12sdp"
            android:text="@string/snooze_5_minutes"
            android:textColor="@color/txt_dark"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/btnLetDoIt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:background="@drawable/bg_btn_let_do_it"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:paddingVertical="@dimen/_12sdp"
            android:text="@string/let_s_do_it"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>
</layout>
