<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_16sdp"
        android:paddingVertical="@dimen/_12sdp"
        tools:ignore="UselessLeaf">


        <TextView
            android:id="@+id/tvTitlePermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:fontFamily="@font/nunito_semi_bold"
            android:gravity="center"
            android:textColor="@color/txt_dark"
            android:textSize="@dimen/_14ssp"
            tools:text="Camera Permission Needed" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:fontFamily="@font/nunito_semi_bold"
            android:gravity="center"
            android:textColor="@color/txt_dark"
            android:textSize="@dimen/_10ssp"
            android:text="@string/allow_app_s_name_to_take_pictures_and_nrecord_video" />

        <TextView
            android:id="@+id/btnGoToSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_go_permission"
            android:fontFamily="@font/nunito_semi_bold"
            android:gravity="center"
            android:paddingVertical="@dimen/_12sdp"
            android:text="@string/go_to_setting"
            android:textColor="@color/txt_white"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>
</layout>